{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": "standard-with-typescript",
  "plugins": [
    "@stylistic"
  ],
  "rules": {
    "@typescript-eslint/semi": [
      "off"
    ],
    "@stylistic/semi": [
      "error",
      "always"
    ],
    "@typescript-eslint/member-delimiter-style": "off",
    "@stylistic/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "semi",
          "requireLast": true
        },
        "singleline": {
          "delimiter": "semi",
          "requireLast": false
        }
      }
    ]
  }
}