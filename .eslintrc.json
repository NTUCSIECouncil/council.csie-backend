{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "extends": "standard-with-typescript",
    "plugins": [
        "@stylistic"
    ],
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": [
            "error",
            "always"
        ]
    }
}