{
  "extends": "@tsconfig/node22/tsconfig.json",

  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@routers/*": [
        "./src/routers/*",
        "./src/routers"
      ],
      "@models/*": [
        "./src/models/*",
        "./src/models"
      ],
      "@type/*": [
        "./src/types/*",
        "./src/types"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "scripts/**/*"
  ]
}