{
  "extends": "@tsconfig/node22/tsconfig.json",

  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@scripts/*": [
        "./scripts/*",
      ],
      "@routers/*": [
        "./src/routers/*",
      ],
      "@models/*": [
        "./src/models/*",
      ],
      "@type/*": [
        "./src/types/*",
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "scripts/**/*",
  ],
}